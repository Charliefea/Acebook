<%= form_for @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.label :password %>
  <%= form.text_field :password %>
  <%= form.label :confirm_password %>
  <%= form.text_field :confirm_password %>

  <%= form.submit "Sign up" %>
<% end %>
